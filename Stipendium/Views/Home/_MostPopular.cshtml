@model IEnumerable<Stipendium.Models.Pageviews>

<h2>Populära Stiftelser</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stiftelse)
        </th>
        <th>Views</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Stiftelse.Stiftelsenamn)
        </td>
        <td>@Html.DisplayFor(modelItem=> item.ViewCount)</td>
        <td>
            @Html.ActionLink("View", "Details", new { id=item.Stiftelse.Id })
        </td>
    </tr>
}

</table>
