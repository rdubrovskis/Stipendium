        <div class="form-group">
            @Html.LabelFor(model => model.Stiftelse.Län, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Stiftelse.Län, selectList, new { @class = "form-control" })
