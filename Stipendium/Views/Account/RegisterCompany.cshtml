@model Stipendium.Models.RegisterCompanyViewModel
    @using Stipendium.Models;
@{
    ViewBag.Title = "Registrera";
    var selectList = new SelectList(new Counties().List);
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterComp", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Skapa nytt konto</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <fieldset>
        <legend>Inloggning</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="form-text text-muted">
                    Se till att e-postadressen är giltig
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="form-text text-muted">
                    Lösenordet måste ha minst en siffer och en stor bokstav
                </span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

    </fieldset>


    <fieldset>
        <legend>Företags information</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.Stiftelse.Stiftelsenr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stiftelse.Stiftelsenr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stiftelse.Stiftelsenr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Stiftelse.Aktnr, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stiftelse.Aktnr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stiftelse.Aktnr, "", new { @class = "text-danger" })
            </div>
        </div>

